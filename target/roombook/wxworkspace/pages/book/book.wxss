/* book.wxss */
@import "../common/weui.wxss";


.my{
  margin-top: -3rpx;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.my .my-item{
  width: 750rpx;
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  max-width: 32rpx;
}
.my .my-item .myitem-icon image{
  margin-top: 9rpx;
  width: 45rpx;
  height: 45rpx;
}
.my .my-item .myitem-name{
  margin-top: 10rpx;
  padding-left: 10rpx;
}

.my .my-item .myitem-picker{
  margin-top: -15rpx;
  padding-bottom: 5rpx;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
}

.my .my-item button{
  margin-top: 20rpx;
}